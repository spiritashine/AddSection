<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/iv_item_image_attach"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/attach_file_icon_image"
           />

         <ImageView
            android:id="@+id/iv_item_image_attach_selected"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="center"
             android:background="@color/backgroundselectedImage"
            android:src="@mipmap/gallery_selected"
            android:visibility="visible" />



    </RelativeLayout>


</LinearLayout>