<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"

    android:layout_height="50dp"
    android:background="@color/background"
    android:orientation="horizontal"
    android:padding="10dp">

    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_larger"
        android:indeterminateDrawable="@drawable/progressbar_login"
        android:progressDrawable="@drawable/progressbar_login" />

    <TextView
        android:id="@+id/message_progress_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="@string/verificationing"
        android:textColor="@color/text_tv_normal"
        android:textSize="@dimen/text_size_biglarger2" />


</LinearLayout>